<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#cd2027</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mytextStyleLarge">
        <item name="android:textSize">@dimen/_30sdp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="mytextStyleMedium">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="mytextStyleSmall">
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>

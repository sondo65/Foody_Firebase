<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/homeBackgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:orientation="horizontal"
        android:background="@color/whiteColor"
        android:id="@+id/rg_tab_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp">

        <View
            android:background="@color/homeBackgroundColor"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:background="@drawable/change_background_tab_home"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:text="@string/latest"
            android:textColor="@drawable/change_text_color_tab_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:background="@color/homeBackgroundColor"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"/>

        <RadioButton
            android:background="@drawable/change_background_tab_home"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:text="@string/category"
            android:textColor="@drawable/change_text_color_tab_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:background="@color/homeBackgroundColor"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"/>


        <RadioButton
            android:background="@drawable/change_background_tab_home"
            android:drawableBottom="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:textAlignment="center"
            android:button="@android:color/transparent"
            android:text="@string/area"
            android:textColor="@drawable/change_text_color_tab_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:background="@color/homeBackgroundColor"
            android:layout_width="@dimen/_2sdp"
            android:layout_height="match_parent"/>

    </RadioGroup>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/nearby"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/nearby"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/order"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/oder_delivery"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/top_member"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/gameandfun"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/game_and_fun"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/review"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/reviews"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:background="@color/whiteColor"
                    android:drawableLeft="@drawable/blog"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="left|center"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/blogs"
                    android:textAllCaps="false"
                    android:textColor="@color/blackColor" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/_3sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@drawable/custom_circle_textview"
                android:textAlignment="center"
                android:gravity="center"
                android:text="6.6"
                android:textColor="@color/whiteColor"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvRestaurantNamePlaces"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:text="Phúc Nhân Quán"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="145 Phan Châu Trinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                android:text="3.5 km"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imgRestaurant"
            android:scaleType="centerCrop"
            android:src="@drawable/test"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp" />

        <Button
            android:id="@+id/btnOderPlaces"
            android:visibility="gone"
            android:padding="@dimen/_5sdp"
            android:drawableTop="@drawable/ic_local_shipping_white_24dp"
            android:layout_margin="@dimen/_5sdp"
            style="@style/mytextStyleSmall"
            android:textAllCaps="false"
            android:text="Oder"
            android:background="@drawable/custom_radius_button_oder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/background"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:text="sondo01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="haha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="6 point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
                android:src="@drawable/background"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:text="paparazii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="Sản phẩm như hạch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="9 point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:paddingLeft="@dimen/_40sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_insert_comment_black_24dp"
                android:text="112"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="@dimen/_10sdp"
                android:drawableLeft="@drawable/ic_photo_camera_black_24dp"
                android:text="33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

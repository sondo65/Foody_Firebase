<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/whiteColor"/>
            <stroke android:color="@color/whiteColor" android:width="@dimen/_2sdp"/>
            <corners android:topRightRadius="@dimen/_5sdp" android:bottomRightRadius="@dimen/_5sdp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/splashBackgroundColor"/>
            <stroke android:color="@color/splashBackgroundColor" android:width="@dimen/_2sdp"/>
            <corners android:topRightRadius="@dimen/_5sdp" android:bottomRightRadius="@dimen/_5sdp"/>
        </shape>
    </item>

</selector>